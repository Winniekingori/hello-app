<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvusername"
            android:hint="Enter username/Email" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5dp" android:autofillHints="" tools:targetApi="o"
            app:layout_constraintHorizontal_bias="0.097"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtsecondname"
            android:importantForAutofill="no"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            style="@style/Widget.AppCompat.AutoCompleteTextView" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tvusername" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="enter password"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnsignin" android:text="SIGNIN"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/edtsecondname"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.055"/>
    <Button
            android:text="Register Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnlogin" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnsignin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.071"/>
    <Button
            android:text="Forgot Password"
            android:layout_width="161dp"
            android:layout_height="53dp"
            android:id="@+id/btnforgotpassword" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnsignin" app:layout_constraintStart_toEndOf="@+id/btnlogin"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.057"/>
</android.support.constraint.ConstraintLayout>