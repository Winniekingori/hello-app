<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/txtSignup">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtfirstname"
            android:hint="enter first name"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5dp" android:autofillHints="" tools:targetApi="o"
            app:layout_constraintHorizontal_bias="0.275" tools:layout_editor_absoluteY="62dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtsecondname"
            android:importantForAutofill="no" app:layout_constraintTop_toBottomOf="@+id/edtfirstname"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5dp" app:layout_constraintHorizontal_bias="0.27"
            style="@style/Widget.AppCompat.AutoCompleteTextView" android:hint="enter last name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edtphonenumber"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"
            tools:layout_editor_absoluteY="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.27" android:autofillHints="" android:hint="phone number"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txremail"
            app:layout_constraintTop_toBottomOf="@+id/edtphonenumber" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"
            app:layout_constraintHorizontal_bias="0.27" android:hint="enter  @email" android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="confirm password"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.28" tools:layout_editor_absoluteY="419dp"/>
    <EditText
            android:layout_width="89dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:text="Signup"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.379"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="REGISTRATION FORM"
            android:ems="10"
            android:id="@+id/edtregistration" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="72dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pswpassword"
            android:hint="input password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txremail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.28"/>
</android.support.constraint.ConstraintLayout>